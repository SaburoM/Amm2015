<?php
    include_once("Model/model.php");
    
    class controller{
        
        public $model;
        public function __construct(){
            $this->model=new model();
        }
        
        public function content($arg){
            if(($arg=="" && !isset($_SESSION['login']))
                include 'Viewer/login.php';
            else if($arg=="login"){
                $risultato=$this->model->login();
                if($risultato != "Errore!"){
                    while($row=$risultato->fetch_row()){
                        if(($_REQUEST['username']==$row[0]) && ($_REQUEST['password']==$row[1])){
                            $_SESSION["Login"]=true;
                            $_SESSION["username"]=$_REQUEST['username'];
                            $_SESSION["password"]=$_REQUEST['password'];                        
                            if($row[2]==1)
                                $_SESSION["adm"]=true; 
                            include 'Viewer/loginSucc.php';                            
                        }
                    }                    
                }
                else
                    include 'Viewer/loginTry.php';
            }
      }
